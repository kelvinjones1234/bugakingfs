// -------------------------------------------------------------------------
// 1. CONFIGURATION
// -------------------------------------------------------------------------

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// -------------------------------------------------------------------------
// 2. ENUMS
// -------------------------------------------------------------------------

enum PaymentMode {
  WEEKLY
  MONTHLY
  ONE_TIME
}

enum InvestmentType {
  AGRICULTURE
  REAL_ESTATE
}

enum AssetType {
  TERRACE
  FARMLAND
}

enum InvestmentStatus {
  PENDING
  PAYING
  COMPLETED
  EARNING
}

enum ScheduleStatus {
  UPCOMING
  PENDING
  PAID
  OVERDUE
}

// -------------------------------------------------------------------------
// 3. USER & PROFILE MODULE
// -------------------------------------------------------------------------

// --- USER MODEL (Auth & Identity) ---
model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  password    String // Hashed via bcrypt
  firstName   String
  lastName    String
  phoneNumber String?
  isActive    Boolean  @default(true)
  isStaff     Boolean  @default(false)
  isApproved  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // NextAuth Mandatory Relations
  accounts Account[]
  sessions Session[]

  // Application Relation
  profile           Profile?
  clientInvestments ClientInvestment[]
  transactions      Transaction[]      // 1. Relation to Transaction

  @@map("users")
}

// --- PROFILE MODEL (Extended Metadata) ---
model Profile {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  userId         String @unique @db.ObjectId
  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  address        String?
  profilePicture String?

  @@map("profiles")
} 

// --- NEXTAUTH PLUMBING (Required for Prisma Adapter) ---
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// -------------------------------------------------------------------------
// 4. INVESTMENT CORE MODULE
// -------------------------------------------------------------------------

model InvestmentProject {
  id                String         @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  investmentType    InvestmentType
  assetType         AssetType
  location          String
  investmentDetail  String
  roiStartAfterDays Int
  projectImg        String?
  expectedRoiPercent Float
  active            Boolean        @default(true)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  // Relations
  pricingOptions ProjectPricing[]

  @@map("investment_projects")
}

// -------------------------------------------------------------------------
// 5. PRICING MODULE
// -------------------------------------------------------------------------

model ProjectPricing {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  projectId String            @db.ObjectId
  project   InvestmentProject @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Moved fields from InvestmentPlan to here
  planName     String // e.g. "3 Months Weekly"
  durationDays Int // e.g. 90
  paymentMode  PaymentMode // e.g. WEEKLY

  totalPrice     Float
  minimumDeposit Float

  // Reverse relation for ClientInvestment
  investments ClientInvestment[]

  @@map("project_pricing")
}

// -------------------------------------------------------------------------
// 6. CLIENT INVESTMENT MODULE
// -------------------------------------------------------------------------

model ClientInvestment {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  userId            String            @db.ObjectId
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  selectedOptionId  String            @db.ObjectId
  selectedOption    ProjectPricing    @relation(fields: [selectedOptionId], references: [id], onDelete: Restrict)
  agreedAmount      Float
  installmentAmount Float
  amountPaid        Float             @default(0.0)
  startDate         DateTime          @default(now())
  nextPaymentDate   DateTime?
  status            InvestmentStatus  @default(PENDING)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  schedules         PaymentSchedule[]
  transactions      Transaction[]     // 2. Relation to Transaction (History)

  @@map("client_investments")
}

// -------------------------------------------------------------------------
// 7. PAYMENT SCHEDULE MODULE
// -------------------------------------------------------------------------

model PaymentSchedule {
  id                String           @id @default(auto()) @map("_id") @db.ObjectId
  investmentId      String           @db.ObjectId
  investment        ClientInvestment @relation(fields: [investmentId], references: [id], onDelete: Cascade)
  title             String
  installmentNumber Int
  dueDate           DateTime
  amount            Float
  status            ScheduleStatus   @default(UPCOMING)
  datePaid          DateTime?
  proofOfPayment    String?

  @@unique([investmentId, installmentNumber])
  @@index([status, dueDate])
  @@map("payment_schedules")
}

// -------------------------------------------------------------------------
// 8. TRANSACTION MODULE (New)
// -------------------------------------------------------------------------

model Transaction {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  
  // 1. Who paid
  userId            String   @db.ObjectId
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 2. What investment was paid for
  investmentId      String   @db.ObjectId
  investment        ClientInvestment @relation(fields: [investmentId], references: [id], onDelete: Cascade)

  // 3. Investment Location (Captured snapshot)
  // Note: Populate this manually in your API logic when creating a transaction
  location          String

  // 4. Amount Paid
  amount            Float    // Using Float to match other currency fields in your schema
  installmentNumber Int?     // Optional, corresponds to PaymentSchedule installment number

  // 5. Date and Time
  timestamp         DateTime @default(now())

  // 6. Metadata
  paymentReference  String?  @unique

  @@index([timestamp(sort: Desc)]) // For fast history sorting (ordering = ["-timestamp"])
  @@index([userId])                // For filtering user history
  @@map("transactions")
}



model PasswordResetToken {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("password_reset_tokens")
}